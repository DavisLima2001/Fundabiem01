                                        <a class="nav-link" href="@Url.Action("ReporteEstadistica","FichaEstadistica")"><i class="fas fa-file-alt"></i>Reporte</a>
                                    </nav>
                                </div>

                            </nav>

                        </div>

                    </div>
                    
